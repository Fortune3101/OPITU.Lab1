<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/signTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/enterEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onNumberClick"
            android:text="7"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onNumberClick"
            android:text="8"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onNumberClick"
            android:text="9"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onSingClick"
            android:text="/"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onNumberClick"
            android:text="4"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onNumberClick"
            android:text="5"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onNumberClick"
            android:text="6"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onSingClick"
            android:text="*"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onNumberClick"
            android:text="1"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onNumberClick"
            android:text="2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onNumberClick"
            android:text="3"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onSingClick"
            android:text="-"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onNumberClick"
            android:text=","
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onNumberClick"
            android:text="0"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onSingClick"
            android:text="="
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onSingClick"
            android:text="+"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onChangeSign"
            android:text="+/-" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onDelete"
            android:text="DEL" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_margin="2px"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="#C0CA33"
            android:onClick="onDeleteAll"
            android:text="DEL ALL" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="ЛАБА Атаджана!"
        android:textColor="#C0CA33"
        android:textSize="36sp"
        android:textStyle="bold" />

</LinearLayout>